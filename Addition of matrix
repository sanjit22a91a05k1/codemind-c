#include<stdio.h>
int main()
{
int r,c;
printf("Enter the row and column of first matrix\n");
scanf("%d%d",&r,&c);
int a[r][c],b[r][c],s[r][c];
printf("Enter the first matrix\n");
for(int i=0; i<r; i++)
{
 for(int j=0; j<c; j++)
 {
 	scanf("%d",&a[i][j]);
 }
}
printf("Enter the first matrix\n");
for(int i=0; i<r; i++)
{
 for(int j=0; j<c; j++)
 {
 	scanf("%d",&b[i][j]);
 }
}
printf("The addition of matrix is :\n");
for(int i=0; i<r; i++)
{
 for(int j=0; j<c; j++)
 {
 	s[i][j]=a[i][j]+b[i][j];
 	 printf("%d ",s[i][j]);
 }
printf("\n");
}
}
