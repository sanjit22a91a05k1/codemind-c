//geometric progress
# include<stdio.h>
# include<math.h>
int main()
{
	int n,sum=0;
	printf("Enter the limit :\n");
	scanf("%d",&n);
	int x;
	printf("Enter the value :\n");
	scanf("%d",&x);
	if(x<0 || n<0)
	{
		printf("Illegal Value\n");
	}
	else
	{
		for(int i=0; i<=n; i++)
		{
			sum=sum+pow(x,i);
		}
		printf("The sum is %d",sum);
	}
}
